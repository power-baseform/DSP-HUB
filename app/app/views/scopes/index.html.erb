<div class="page-title">
  <div class="title_left">
  </div>

  <div class="title_right">
  </div>
</div>
<div class="clearfix">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>List of Themes</h2>
          <div class="nav navbar-right panel_toolbox">
            <%= paginate @scopes %>
          </div>
          <div class="clearfix"></div>
        </div>

        <div class="x_content">
          <table class="table table-striped jambo_table">
            <thead>
              <tr>
                <th>Code</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              <% @scopes.each.with_index do |scope, idx| %>
                <tr class="<%= idx % 2 == 0 ? "odd" : "even" %> pointer openTr"  data-link="<%= edit_scope_path(scope) %>">
                  <td><%= scope.translated_code %></td>
                  <td><%= scope.translated_description %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(".openTr").on("click", function(e) {
    location.href = this.dataset.link;
  });
</script>
