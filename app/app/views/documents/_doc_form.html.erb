<%= form_for [@challenge, @document] do |f| %>

  <div class="form-group">
    <label class="control-label" for="name">Date:</label>
    <%= f.date_field :data, class:"form-control"%>
  </div>

  <div class="form-group">
    <label class="control-label" for="name">Description:</label>
    <%= f.text_field :designacao, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="name">File type:</label>
    <%= f.text_field :file_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="name">File:</label>
    <%= link_to @document.nomeficheiro, document_path(@document.id) if @document.persisted?  %>
    <%= f.file_field :document, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
