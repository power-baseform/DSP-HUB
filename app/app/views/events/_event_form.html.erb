<%= form_for [@challenge, @event] do |f| %>

  <div class="form-group">
    <label class="control-label" for="name">Date:</label>
    <%= f.datetime_select :data, class:"form-control"%>
  </div>

  <div class="form-group">
    <label class="control-label" for="name">Description:</label>
    <%= f.text_field :designacao, class: "form-control" %>
    <p class="error"><%= @event.errors.messages[:designacao].try(:first) %></p>
  </div>

  <div class="form-group">
    <label class="control-label" for="name">Venue:</label>
    <%= f.text_field :local, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
