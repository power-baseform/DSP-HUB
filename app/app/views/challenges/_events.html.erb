<div class="x_title">
  <h2><b>Listing Events for Challenge:</b> <%= @challenge.codigo %> - <%= @challenge.titulo %></h2>
  <div class="nav navbar-right panel_toolbox">
    <%= link_to 'Back', challenges_path, class: "btn btn-dark" %>
    <%= link_to 'New', new_challenge_event_path(@challenge), class: "btn btn-success" %>
  </div>
  <div class="clearfix"></div>
</div>
<div class="x_content">
  <table class="table table-striped jambo_table">
    <thead>
      <tr>
        <th>Event</th>
        <th>Venue</th>
        <th>Date</th>
        <th>Participants</th>
      </tr>
    </thead>
    <tbody>
      <% @challenge.events.order(:data).each.with_index do |event, idx| %>
        <tr class="<%= idx % 2 == 0 ? "odd" : "even" %> pointer openTr" data-link="<%= edit_challenge_event_path(@challenge, event) %>">
          <td><%= event.designacao %></td>
          <td><%= event.local %></td>
          <td><%= event.data %></td>
          <td><%= event.participants.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<script>
  $(".openTr").on("click", function(e) {
    location.href = this.dataset.link;
  });
</script>
