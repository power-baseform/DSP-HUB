<div class="page-title">
  <div class="title_left">
      <%= render 'challenges/tabs' %>
  </div>
</div>
<div class="clearfix">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Showing <b><%= @answer.participant.nome %></b> answer on survey: <b><%= @survey.nome %></b> on challenge: <b><%= @challenge.titulo %></b></h2>
          <div class="nav navbar-right panel_toolbox">
            <%= link_to 'Back', edit_challenge_survey_path(@challenge, @survey, tab: "surveys"), class: "btn btn-dark" %>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <% survey_builder = SurveyBuilder.new(@survey)
             survey_builder.with_answer(@answer) %>
          <%= raw survey_builder.markup %>
        </div>
      </div>
    </div>
  </div>
</div>
