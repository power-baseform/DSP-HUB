<% if @section.persisted? %>
  <div id="uploadURL" style="display: none;"><%= challenge_section_upload_from_editor_path(@challenge, @section) %></div>
<% end %>

<%= form_for [@challenge,@section] do |f| %>

  <div class="form-group">
    <label class="control-label" for="name">Title:</label>
    <%= f.text_field :titulo, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="name">Order:</label>
    <%= f.number_field :indice, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :corpo, class: "form-control tinymce", rows: 20 %>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
